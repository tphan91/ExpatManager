@model ExpatManager.Models.ExpatriateDocumentUpload
@{
    ViewBag.Title = "Create";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h2>
    Create</h2>

@Html.Partial("~/Views/Expatriate/_DisplayForControl.cshtml", Model.Expatriates)

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Expatriate Document Upload</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.FileName)
        </div>
        <div class="editor-field">
            @if (!IsPost)
            {
                @FileUpload.GetHtml(
            initialNumberOfFiles: 1,
            allowMoreFilesToBeAdded: true,
            includeFormTag: false,
            addText: "Add another file",
            uploadText: "Upload")
            }
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
    <div class="editor-label-hidden">
        @Html.HiddenFor(model => model.CreateDateTime)
        @Html.HiddenFor(model => model.CreateBy)
        @Html.HiddenFor(model => model.ModifiedDateTime)
        @Html.HiddenFor(model => model.ModifiedBy)
        @Html.HiddenFor(model => model.FileName)
    </div> 
}
<div>
    @Html.ActionLink("Back to Expatriate", "Details", "Expatriate", new { id = Model.ExpatriateID }, null)
</div>
