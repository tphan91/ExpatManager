@model ExpatManager.Models.Expatriate
@using ExpatManager.Helper
@{
    ViewBag.Title = "Create Expatriate";
}
<h2>
    Create Expatriate</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/AutoComplete.js")" type="text/javascript"></script>
@using (Html.BeginForm("Create", "Expatriate", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend></legend>
        <div class="span-6">
            <div class="editor-label">
                @Html.LabelFor(model => model.FullName)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.JobGrade)
            </div>
        </div>
        <div class="span-6">
            <div class="editor-field">
                <input type="text" id="autocomplete" name="key" data-autocomplete="@Url.Action("AutoCompleteData", "Expatriate")"  />
                @Html.ValidationMessageFor(model => model.ExpatriateID)
            </div>
            <div class="editor-field">
                @Html.EnumDropDownListFor(model => model.JobGrade)
                @Html.ValidationMessageFor(model => model.JobGrade)
            </div>
        </div>
        <div class="span-6">
            <div class="editor-label">
                @Html.LabelFor(model => model.Status)
            </div>
        </div>
        <div class="span-6">
            <div class="editor-field">
                @Html.EditorFor(model => model.Status)
                @Html.ValidationMessageFor(model => model.Status)
            </div>
        </div>
    </fieldset>
    <p>
        <input type="submit" value="Create" />
    </p>
    <div class="editor-label-hidden">
        @Html.HiddenFor(model => model.FamilyStatus)
        @Html.HiddenFor(model => model.CreateBy)
        @Html.HiddenFor(model => model.CreateDateTime)
        @Html.HiddenFor(model => model.ModifiedBy)
        @Html.HiddenFor(model => model.ModifiedDateTime)
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
