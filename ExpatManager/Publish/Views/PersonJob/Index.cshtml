@model IEnumerable<ExpatManager.Models.vPersonJob>


@{
    ViewBag.Title = "Person Index";
}
<script src="@Url.Content("~/Scripts/AutoComplete.js")" type="text/javascript"></script>
<h2>
    ASP.NET MVC 3 AutoComplete</h2>
@using (Html.BeginForm("Index", "PersonJob", FormMethod.Get, new { style = "text-align: center;" }))
{
    <input  type="text"  id="autocomplete" name="key" data-autocomplete=" @Url.Action("AutoCompleteData", "PersonJob")"  /> 
    <input type="submit" name="submit" value="Submit" /> 
}
<table width="100%">
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.FirstName
            </td>
            <td>
                @item.LastName
            </td>
            <td>
                @item.PersonJobID
            </td>
        </tr> 
    }
</table>


@Html.TextBox("searchTerm")
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            FirstName
        </th>
        <th>
            LastName
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PersonJobID }) |
                @Html.ActionLink("Details", "Details", new { id = item.PersonJobID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PersonJobID })
            </td>
        </tr>
    }
</table>
