@model ExpatManager.Models.Expatriate
@using ExpatManager.Helper
@{
    ViewBag.Title = "Edit Expatriate";
}
<h2>
    Edit Expatriate - @Html.DisplayFor(model => model.FullNameCIF)</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Edit", "Expatriate", FormMethod.Post))
{
    @Html.ValidationSummary(false, "Create was unsuccessful, please correct the errors and try again.")
    @Html.Partial("_DisplayForControl", Model)
    @Html.Partial("_EditorForControl", Model)
    <p>
        <input type="submit" value="Save" />
    </p>
}
<div>
    @Html.ActionLink("Details", "Details", new { id = Model.ExpatriateID }) | @Html.ActionLink("Back to List", "Index")
</div>
