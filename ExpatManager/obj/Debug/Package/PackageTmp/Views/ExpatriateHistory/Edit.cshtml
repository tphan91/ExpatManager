@model ExpatManager.Models.ExpatriateHistory
@using ExpatManager.Helper
@using ExpatManager.Models
@{
    ViewBag.Title = "Edit Expatriate History";
}

<h2>Edit Expatriate History</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Expatriate</legend>
        <div class="span-6">
            <div class="display-label">
                @Html.LabelFor(model => model.Expatriates.Title)</div>
            <div class="display-field">
                @Html.DisplayFor(model => model.Expatriates.Title)
            </div>
            <div class="display-label">
                @Html.LabelFor(model => model.Expatriates.CeilingValue)</div>
            <div class="display-field">
                @Html.DisplayFor(model => model.Expatriates.CeilingValue)
            </div>
        </div>
        <div class="span-6">
            <div class="display-label">
                @Html.LabelFor(model => model.Expatriates.FullName)</div>
            <div class="display-field">
                @Html.DisplayFor(model => model.Expatriates.FullName)
            </div>
            <div class="display-label">
                @Html.LabelFor(model => model.Expatriates.FamilyStatus)</div>
            <div class="display-field">
                @Html.DisplayFor(model => model.Expatriates.FamilyStatus)
            </div>
        </div>
        <div class="span-6">
            <div class="display-label">
                @Html.LabelFor(model => model.Expatriates.CIF)</div>
            <div class="display-field">
                @Html.DisplayFor(model => model.Expatriates.CIF)
            </div>
        </div>
        <div class="span-6">
            <div class="display-label">
                @Html.LabelFor(model => model.CostCode)</div>
            <div class="display-field">
                @Html.DisplayFor(model => model.CostCode)
            </div>
        </div>
    </fieldset>
    <fieldset>
        <legend>Expatriate</legend>
        <div class="span-8">
            <div class="editor-label">
                @Html.LabelFor(model => model.Expatriates.Title)
            </div>
            <div class="editor-field">
                @Html.EnumDropDownList("Expatriate.EnumTitle", (Enums.EnumTitle)Enum.Parse(typeof(Enums.EnumTitle), Model.Expatriates.Title))
                @Html.ValidationMessageFor(model => model.Expatriates.EnumTitle)
            </div>
        </div>
        <div class="span-8">
            <div class="editor-label">
                @Html.LabelFor(model => model.JobGrade)
            </div>
            <div class="editor-field">
                @Html.EnumDropDownList("Expatriate.EnumJobGrade", (Enums.EnumJobGrade)Enum.Parse(typeof(Enums.EnumJobGrade), Model.JobGrade))
                @Html.ValidationMessageFor(model => model.JobGrade)
            </div>
        </div>
        <div class="span-8">
            <div class="editor-label">
                @Html.LabelFor(model => model.CostCode)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.CostCode)
                @Html.ValidationMessageFor(model => model.CostCode)
            </div>
        </div>
        @Html.HiddenFor(model => model.ExpatriateID)
        @Html.HiddenFor(model => model.CreateDateTime)
        @Html.HiddenFor(model => model.CreateBy)
        @Html.HiddenFor(model => model.ModifiedDateTime)
        @Html.HiddenFor(model => model.ModifiedBy)
        @Html.HiddenFor(model => model.Title)
        <div class="span-24">
            <input type="submit" value="Save" />
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
