@model ExpatManager.Models.AgreementPayment
@{
    ViewBag.Title = "Create Agreement Payment";
}
<h2>
    Create Agreement Payment</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.Partial("~/Views/Expatriate/_DisplayForControl.cshtml", Model.AgreementDetail.Expatriates)
    @Html.Partial("~/Views/AgreementDetail/_DisplayForControl.cshtml", Model.AgreementDetail)
    <fieldset>
        <legend>Agreement Payment</legend>
        @Html.HiddenFor(model => model.AgreementDetailID)
        <div class="span-6">
            <div class="editor-label">
                @Html.LabelFor(model => model.CostCode)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.CostCode)
                @Html.ValidationMessageFor(model => model.CostCode)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.AgreementDetail.StartDate)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.PaymentDate)
                @Html.ValidationMessageFor(model => model.PaymentDate)
            </div>
        </div>
        <div class="span-6">
            <div class="editor-label">
                @Html.LabelFor(model => model.ProRataPayment)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.ProRataPayment)
                @Html.ValidationMessageFor(model => model.ProRataPayment)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Status)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Status)
                @Html.ValidationMessageFor(model => model.Status)
            </div>
        </div>
        <div class="span-6">
            <div class="editor-label">
                @Html.LabelFor(model => model.MonthlyPayment)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.MonthlyPayment)
                @Html.ValidationMessageFor(model => model.MonthlyPayment)
            </div>
        </div>
        <div class="span-6">
            <div class="editor-label">
                @Html.LabelFor(model => model.TotalAmount)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.TotalAmount)
                @Html.ValidationMessageFor(model => model.TotalAmount)
            </div>
        </div>
        @Html.HiddenFor(model => model.CreateBy)
        @Html.HiddenFor(model => model.CreateDateTime)
        @Html.HiddenFor(model => model.ModifiedBy)
        @Html.HiddenFor(model => model.ModifiedDateTime)
        @Html.HiddenFor(model => model.AgreementPaymentID)
        @Html.HiddenFor(model => model.AgreementDetailID)
    </fieldset>
    @Html.Partial("~/Views/Shared/DisplayTemplates/CreatedAndModifiedControl.cshtml", Model)    
    <p>
        <input type="submit" value="Create" />
    </p>
}
<div>
    @Html.ActionLink("Back", "Details", "AgreementDetail", new { id = Model.AgreementDetailID }, null)
</div>
